<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="info.androidhive.slidingmenu.MainActivity$PlaceholderFragment" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dummy_people" />
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/ChatLabelGruppeWaehlen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gruppe wählen" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
        <TextView
            android:id="@+id/ChatLabelFreundWaehlen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Freund wählen" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/LoginButton"
            style="android:buttonStyle"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:text="Bestätigen"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>
